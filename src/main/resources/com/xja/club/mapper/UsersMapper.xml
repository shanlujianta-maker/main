<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xja.club.mapper.UsersMapper">

    <resultMap id="BaseResultMap" type="Users">
        <id property="userId" column="user_id" />
        <result property="userPassword" column="user_password" />
        <result property="realName" column="real_name" />
        <result property="userPhone" column="user_phone" />
        <result property="userType" column="user_type" />
        <result property="createdAt" column="created_at" />
    </resultMap>

    <sql id="Base_Column_List">
        user_id,user_password,real_name,user_phone,user_type,created_at
    </sql>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from users
        where  user_id = #{userId}
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from users
        where  user_id = #{userId}
    </delete>
    <!--注册-->
    <insert id="insert" keyColumn="user_id" keyProperty="userId" parameterType="Users" useGeneratedKeys="true">
        insert into users
            ( user_password,real_name,user_phone,user_type,created_at)
        values (#{userPassword},#{realName},#{userPhone},#{userType},#{createdAt})
    </insert>

    <insert id="insertSelective" keyColumn="user_id" keyProperty="userId" parameterType="Users" useGeneratedKeys="true">
        insert into users
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="userPassword != null">user_password,</if>
            <if test="realName != null">real_name,</if>
            <if test="userPhone != null">user_phone,</if>
            <if test="userType != null">user_type,</if>
            <if test="createdAt != null">created_at,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="userPassword != null">#{userPassword},</if>
            <if test="realName != null">#{realName},</if>
            <if test="userPhone != null">#{userPhone},</if>
            <if test="userType != null">#{userType},</if>
            <if test="createdAt != null">#{createdAt},</if>
        </trim>
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="Users">
        update users
        <set>
            <if test="userPassword != null">
                user_password = #{userPassword},
            </if>
            <if test="realName != null">
                real_name = #{realName},
            </if>
            <if test="userPhone != null">
                user_phone = #{userPhone},
            </if>
            <if test="userType != null">
                user_type = #{userType},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
        </set>
        where   user_id = #{userId}
    </update>
    <update id="updateByPrimaryKey" parameterType="Users">
        update users
        set
            user_password =  #{userPassword},
            real_name =  #{realName},
            user_phone =  #{userPhone},
            user_type =  #{userType},
            created_at =  #{createdAt}
        where   user_id = #{userId}
    </update>

    <!-- 新增：根据手机号查询用户的SQL -->
    <select id="selectByPhone" parameterType="java.lang.String" resultMap="BaseResultMap">
        select user_id, user_password, real_name, user_phone, user_type, created_at
        from users
        where user_phone = #{userPhone,jdbcType=VARCHAR}
    </select>



</mapper>
